{
    "display_information": {
        "name": "Keyword Research Bot",
        "description": "Get Google Ads keyword research data directly in Slack",
        "background_color": "#2c2d30",
        "long_description": "A powerful Slack bot that provides Google Ads keyword research functionality. Get search volume, competition levels, and monthly trends for any keyword directly in your Slack workspace."
    },
    "features": {
        "bot_user": {
            "display_name": "Keyword Research Bot",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/keyword-research",
                "description": "Research keyword search volume and competition",
                "usage_hint": "digital marketing",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "chat:write",
                "commands",
                "im:read",
                "im:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention",
                "message.im"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "is_hosted": true,
        "token_rotation_enabled": false
    }
}
